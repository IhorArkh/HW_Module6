@model Human
@{
    ViewData["Title"] = "Update Human";
}


<div>
    <form method="post">
        <div class="mb-3">
            <label for="@Model.Name" class="form-label">Name</label>
            <input type="text" class="form-control" id="name" name="name" />
        </div>
        <div class="mb-3">
            <label for="@Model.Age" class="form-label">Age</label>
            <input type="text" class="form-control" id="age" name="age" />
        </div>
        <div class="mb-3">
            <button class="btn btn-success btn-lg" type="submit">Update</button>
            <a class="btn btn-danger" href="Index" role="button">Go back</a>
        </div>
    </form>
</div>
